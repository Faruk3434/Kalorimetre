<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA7878"
    tools:context=".CalculateActivity">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product" />

        <EditText
            android:id="@+id/editTextProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity" />

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Quantity(gram)"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DA7878"
            android:text="Calculate" />

        <Button
            android:id="@+id/buttonAddtoMymeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Add To My Meals" />

        <TextView
            android:id="@+id/textViewCalorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n\n0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    </LinearLayout>

</RelativeLayout>